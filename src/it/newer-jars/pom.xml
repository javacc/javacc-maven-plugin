<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.javacc.plugin.javacc-maven-plugin</groupId>
    <artifactId>it-tests</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <groupId>org.javacc.plugin.javacc-maven-plugin.javacc.it-tests</groupId>
  <artifactId>newer-jars</artifactId>
  <packaging>jar</packaging>

  <name>Integration Tests - newer-jars</name>
  <description>Tests checking to be regenerated files because of newer processor jar(s), reusing
    jjtree-then-javacc-goals csharp part (that must have already been processed).</description>

  <build>
    <plugins>

      <!-- touch a processor jar to force regeneration -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>touch</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <failOnError>true</failOnError>
              <target>
                <ant antfile="${project.basedir}/build-utils.xml" target="touch-file">
                  <property name="file"
                    value="${settings.localRepository}/org/javacc/generator/csharp/${javacc.csharp.version}/csharp-${javacc.csharp.version}.jar" />
                </ant>
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <!-- needs to add a different source directory -->
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>add-source</id>
            <!-- before (javacc) generate-sources! -->
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>../jjtree-then-javacc-goals/src/main/csharp</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.javacc.plugin</groupId>
        <artifactId>javacc-maven-plugin</artifactId>
        <executions>

          <execution>
            <!-- source and output directories from jjtree-then-javacc-goals -->
            <id>jjtree-csharp</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>jjtree</goal>
            </goals>
            <configuration>
              <sourceDirectory>../jjtree-then-javacc-goals/src/main/csharp</sourceDirectory>
              <jjtreeCmdLineArgs>
                <gen>-CODE_GENERATOR="C#"</gen>
                <jjtod>
                  -JJTREE_OUTPUT_DIRECTORY="${project.build.directory}/../../jjtree-then-javacc-goals/target/gen-src/mytree-c#"</jjtod>
              </jjtreeCmdLineArgs>
            </configuration>
          </execution>

          <execution>
            <!-- source and output directories from jjtree-then-javacc-goals -->
            <id>javacc-csharp</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>javacc</goal>
            </goals>
            <configuration>
              <sourceDirectory>
                ${project.build.directory}/../../jjtree-then-javacc-goals/target/gen-src/mytree-c#</sourceDirectory>
              <javaccCmdLineArgs>
                <gen>-CODE_GENERATOR="C#"</gen>
                <jjod>
                  -OUTPUT_DIRECTORY="${project.build.directory}/../../jjtree-then-javacc-goals/target/gen-src/mycc-c#"</jjod>
              </javaccCmdLineArgs>
            </configuration>
          </execution>

        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <dependencies>
          <dependency>
            <groupId>org.codehaus.plexus</groupId>
            <artifactId>plexus-compiler-csharp</artifactId>
            <version>${plexus-compiler-csharp.version}</version>
          </dependency>
        </dependencies>
        <executions>
          <!-- we are producing 2 exe, each one with a main, so we must set 2 executions -->
          <execution>
            <id>csharp-compile</id>
            <goals>
              <!-- need to override parent definition-->
              <goal>compile</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/c#</outputDirectory>
              <!--  debug default value is true! -->
              <debug>false</debug>
              <compilerId>csharp</compilerId>
              <fork>true</fork>
              <executable>${env.CSCCOMPILERDIR}\csc.exe</executable>
              <compilerArgs>
                <arg>-nologo:true</arg>
                <arg>-nowarn:0414</arg>
                <arg>-utf8output:true</arg>
                <arg>-target:exe</arg>
                <arg>-out:${project.artifactId}-7.exe</arg>
              </compilerArgs>
              <excludes>
                <exclude>Σ8/**</exclude>
              </excludes>
            </configuration>
          </execution>
          <execution>
            <id>csharp-compile-8</id>
            <goals>
              <goal>compile</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/c#</outputDirectory>
              <!--  debug default value is true! -->
              <debug>false</debug>
              <compilerId>csharp</compilerId>
              <fork>true</fork>
              <executable>${env.CSCCOMPILERDIR}\csc.exe</executable>
              <compilerArgs>
                <arg>-nologo:true</arg>
                <arg>-nowarn:0414</arg>
                <arg>-utf8output:true</arg>
                <arg>-target:exe</arg>
                <arg>-out:${project.artifactId}-8.exe</arg>
              </compilerArgs>
              <includes>
                <include>Σ8/*.cs</include>
              </includes>
            </configuration>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>
</project>
