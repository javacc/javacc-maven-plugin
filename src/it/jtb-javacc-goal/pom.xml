<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.javacc.plugin.javacc-maven-plugin</groupId>
    <artifactId>it-tests</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <groupId>org.javacc.plugin.javacc-maven-plugin.javacc.it-tests</groupId>
  <artifactId>jtb-javacc-goal</artifactId>
  <packaging>jar</packaging>

  <name>Integration Tests - jtb-javacc-goal</name>
  <description>Tests checking JJTree-JavaCC default execution on parsers without errors or failures.</description>

  <build>
    <plugins>
      <plugin>
        <groupId>org.javacc.plugin</groupId>
        <artifactId>javacc-maven-plugin</artifactId>
        <executions>

          <execution>
            <!-- java + utf-8 + default source and output directories + full output file name
                 + no package in grammar nor command line -->
            <id>jtb-javacc-eg01</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>jtb-javacc</goal>
            </goals>
            <configuration>
              <includes>
                <include>Eg01.jtb</include>
              </includes>
              <jtbCmdLineArgs>
                <gen>-CODE_GENERATOR="Java"</gen>
                <enc>-GRAMMAR_ENCODING="UTF-8"</enc>
                <jjod>-OUTPUT_DIRECTORY="${project.build.directory}/generated-sources/javacc"</jjod>
                <arg>-JTB_O="${project.build.directory}/generated-sources/jtb/Eg01.jj"</arg>
              </jtbCmdLineArgs>
              <javaccCmdLineArgs combine.self="override">
                <gen>-CODE_GENERATOR="Java"</gen>
                <enc>-GRAMMAR_ENCODING="UTF-8"</enc>
              </javaccCmdLineArgs>
            </configuration>
          </execution>

          <execution>
            <!-- java + utf-8 + default source and output directories + short output file name
                 + no package in grammar but set in command line -->
            <id>jtb-javacc-eg02</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>jtb-javacc</goal>
            </goals>
            <configuration>
              <includes>
                <include>Eg02.jtb</include>
              </includes>
              <jtbCmdLineArgs>
                <gen>-CODE_GENERATOR="Java"</gen>
                <enc>-GRAMMAR_ENCODING="UTF-8"</enc>
                <arg>-JTB_O="Eg02.jj"</arg>
                <!-- no declared package, package set here (yes with an ë)... -->
                <arg>-JTB_P="org.jtb_jcc.ëg02"</arg>
                <!-- ...and directories must be set accordingly with the package part -->
                <jjod>
                  -OUTPUT_DIRECTORY="${project.build.directory}/generated-sources/javacc/org/jtb_jcc/ëg02"</jjod>
                <jtbod>-JTB_D="${project.build.directory}/generated-sources/jtb/org/jtb_jcc/ëg02"</jtbod>
              </jtbCmdLineArgs>
              <javaccCmdLineArgs combine.self="override">
                <jjod>
                  -OUTPUT_DIRECTORY="${project.build.directory}/generated-sources/javacc/org/jtb_jcc/ëg02"</jjod>
              </javaccCmdLineArgs>
            </configuration>
          </execution>

          <execution>
            <!-- (java + utf-8) + default source and output directories + full output file name
                 + package in grammar -->
            <id>jtb-javacc-eg03</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>jtb-javacc</goal>
            </goals>
            <configuration>
              <includes>
                <include>Eg03.jtb</include>
              </includes>
              <jtbCmdLineArgs>
                <jjod>-OUTPUT_DIRECTORY="${project.build.directory}/generated-sources/javacc"</jjod>
                <arg>
                  -JTB_O="${project.build.directory}/generated-sources/jtb/org/jtb_jcc/eg03/Eg03.jj"</arg>
              </jtbCmdLineArgs>
              <!--              <javaccCmdLineArgs combine.self="override">-->
              <!--                <enc>-GRAMMAR_ENCODING="UTF-8"</enc>-->
              <!--                <enc>-GRAMMAR_ENCODING="UTF-8"</enc>-->
              <!--              </javaccCmdLineArgs>-->
            </configuration>
          </execution>

          <execution>
            <!-- (java + utf-8) + default source and output directories + short output file name
                 + package in grammar -->
            <id>jtb-javacc-eg04</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>jtb-javacc</goal>
            </goals>
            <configuration>
              <includes>
                <include>Eg04.jtb</include>
              </includes>
              <jtbCmdLineArgs>
                <jjod>-OUTPUT_DIRECTORY="${project.build.directory}/generated-sources/javacc"</jjod>
                <arg>-JTB_O="Eg04.jj"</arg>
              </jtbCmdLineArgs>
              <javaccCmdLineArgs combine.self="override">
                <gen>-CODE_GENERATOR="Java"</gen>
              </javaccCmdLineArgs>
            </configuration>
          </execution>

          <execution>
            <!-- (java + utf-8) + custom source and output directories + full output file name
                 + package + true option -->
            <id>jtb-javacc-eg05</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>jtb-javacc</goal>
            </goals>
            <configuration>
              <sourceDirectory>${basedir}/src/main/my tb</sourceDirectory>
              <includes>
                <include>Eg05.jtb</include>
              </includes>
              <jtbCmdLineArgs>
                <jjod>-OUTPUT_DIRECTORY="${project.build.directory}/gen-src/my cc"</jjod>
                <jtbod>-JTB_D="${project.build.directory}/gen-src/my tb"</jtbod>
                <arg>-JTB_O="${project.build.directory}/gen-src/my tb/org/jtb_jcc/eg05/Eg05.jj"</arg>
                <arg>-JTB_P="org.jtb_jcc.eg05"</arg>
                <arg>-do</arg>
              </jtbCmdLineArgs>
              <javaccCmdLineArgs>
                <jjod>-OUTPUT_DIRECTORY="${project.build.directory}/gen-src/my cc"</jjod>
              </javaccCmdLineArgs>
            </configuration>
          </execution>

          <execution>
            <!-- (java + utf-8) +  custom source and output directories + short output file name
                 + package in grammar + non ascii chars + false option -->
            <id>jtb-javacc-eγ06</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>jtb-javacc</goal>
            </goals>
            <configuration>
              <sourceDirectory>${basedir}/src/main/my tb</sourceDirectory>
              <includes>
                <include>Eγ06.jtb</include>
              </includes>
              <jtbCmdLineArgs>
                <jjod>-OUTPUT_DIRECTORY="${project.build.directory}/gen-src/my cc"</jjod>
                <jtbod>-JTB_D="${project.build.directory}/gen-src/my tb"</jtbod>
                <arg>-JTB_O="Eγ06.jj"</arg>
                <arg>-do=false</arg>
              </jtbCmdLineArgs>
              <javaccCmdLineArgs>
                <jjod>-OUTPUT_DIRECTORY="${project.build.directory}/gen-src/my cc"</jjod>
              </javaccCmdLineArgs>
            </configuration>
          </execution>

        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <dependencies>
          <dependency>
            <groupId>org.codehaus.plexus</groupId>
            <artifactId>plexus-compiler-csharp</artifactId>
            <version>${plexus-compiler-csharp.version}</version>
          </dependency>
        </dependencies>
        <executions>
          <execution>
            <!-- for javac, overriding parent execution (with global toolchain setting) -->
            <id>default-compile</id>
            <configuration>
              <includes>
                <include>**/eg*/**/*.java</include>
              </includes>
            </configuration>
          </execution>
          <execution>
            <!-- for javac (with specific toolchain setting)
                  (javac 8 does not manage well imported types with non ASCII characters) -->
            <id>javac-not-8-compile</id>
            <goals>
              <goal>compile</goal>
            </goals>
            <configuration>
              <includes>
                <include>**/ëg02/**/*.java</include>
                <include>**/eγ06/**/*.java</include>
              </includes>
              <jdkToolchain>
                <version>[11,)</version>
              </jdkToolchain>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- The package-less grammars of this project produce "cannot cast ..." and other compile
            errors caused by incoherences with the package-less grammars of some other projects
            when these projects are configured under Eclipse with source folders and auto build
            and when this build is run as standalone (i.e. not part of the project's build);
           in order to leave the build without problems markers in Eclipse we add a step to
            clean the offending generated files.
           Note that this does not reduce the tests coverage and validity :-) -->
      <plugin>
        <!-- clean some of the generated files after the package phase -->
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-clean-plugin</artifactId>
        <version>${maven-clean-plugin.version}</version>
        <executions>
          <execution>
            <id>clean-classes</id>
            <phase>post-integration-test</phase>
            <goals>
              <goal>clean</goal>
            </goals>
            <configuration>
              <excludeDefaultDirectories>true</excludeDefaultDirectories>
              <filesets>
                <fileset>
                  <directory>${project.build.directory}/generated-sources/jtb</directory>
                  <includes>
                    <include>*.java</include>
                  </includes>
                </fileset>
                <fileset>
                  <directory>${project.build.directory}/generated-sources/javacc</directory>
                  <includes>
                    <include>*.java</include>
                    <include>*.jj</include>
                  </includes>
                </fileset>
              </filesets>
            </configuration>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>
</project>
